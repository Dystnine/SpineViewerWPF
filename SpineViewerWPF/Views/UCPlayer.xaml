<UserControl x:Class="SpineViewerWPF.Views.UCPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpineViewerWPF.Views"
             mc:Ignorable="d" 
     d:DesignHeight="610" d:DesignWidth="800" SizeChanged="UserControl_SizeChanged" >
    <Grid Name="Panel" Background="#FFC1C1C1" >
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"  PreviewMouseWheel="ScrollViewer_MouseWheel" >
        <Canvas Name="Frame" Background="{x:Null}"  MouseDown="Frame_MouseDown" MouseMove="Frame_MouseMove"  MouseUp="Frame_MouseUp"  MouseLeave="Frame_MouseLeave"  >
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform />
                    </TransformGroup>
                </Canvas.RenderTransform>
                <Canvas.LayoutTransform>
                    <TransformGroup>
                        <ScaleTransform  />
                    </TransformGroup>
                </Canvas.LayoutTransform>
            </Canvas>
        </ScrollViewer>
    </Grid>
</UserControl>
